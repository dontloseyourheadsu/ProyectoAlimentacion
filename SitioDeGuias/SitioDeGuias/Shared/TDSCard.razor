<div class="container">
  <img src="@ImageSrc" alt="@AltText" class="image">
  <div class="overlay">
    <div class="text">Hello World</div>
  </div>
</div>

@code {
    [Parameter]
    public string? AltText { get; set; }
    
    [Parameter]
    public string? ImageSrc { get; set; }
    
    [Parameter]
    public string? Text { get; set; }
}