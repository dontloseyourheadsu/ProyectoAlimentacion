@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Style="@($"background: #252525; ")" Elevation="1">
        <MudImage Height="45" Src="/images/logo.png" Alt="Tiempo de sites logo modificado"/>
        <MudSpacer/>
        <MudTabs Style="@($"background: #252525;")" Rounded="true" ApplyEffectsToContainer="true" Color="@Color.Primary" SliderColor="Color.">
            <MudTabPanel Style="@($"background: #252525;")" Text="Inicio"/>
            <MudTabPanel Style="@($"background: #252525;")" Text="Platos"/>
            <MudTabPanel Style="@($"background: #252525;")" Text="Guías"/>
            <MudTabPanel Style="@($"background: #252525;")" Text="About"/>
        </MudTabs>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => OpenDrawer(Anchor.End))"/>
    </MudAppBar>
    <MudDrawer Style="@($"background: #252525; color: {Colors.Shades.White};")" @bind-Open="@open" Anchor="@anchor" Elevation="2" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudImage Height="45" Src="/images/logo.png" Alt="Tiempo de sites logo modificado"/>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open;
    Anchor anchor;
    
    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;
    }
}