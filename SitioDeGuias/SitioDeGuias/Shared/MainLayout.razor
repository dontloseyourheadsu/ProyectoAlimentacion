@inherits LayoutComponentBase

<MudThemeProvider Theme="_costumedColors" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout Style="overflow-x: hidden;">
    <MudAppBar Class="d-flex justify-center" Style="@($"background: #252525; height: 80px; position: relative;")" Elevation="10">
        <MudIconButton Href="/">
            <MudImage Height="60" Src="/images/logo.png" Alt="Tiempo de sites logo modificado"/>
        </MudIconButton>
        <MudSpacer/>
        <div class="displays-on-big">
            <NavMenu Orientation="d-flex flex-row"/>
        </div>
        <div class="displays-on-small">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => OpenDrawer(Anchor.End))"/>
        </div>
    </MudAppBar>
    
    <div class="displays-on-small">
        <MudDrawer Style="@($"background: #252525; color: {Colors.Shades.White};")" @bind-Open="@open" Anchor="@anchor" Elevation="2" Variant="@DrawerVariant.Responsive">
            <NavMenu/>
        </MudDrawer>
    </div>

    @Body
        
</MudLayout>


@code {
    bool open;
    Anchor anchor;

    void OpenDrawer(Anchor anchor)
    {
        open = !open;
        this.anchor = anchor;
    }

    MudTheme _costumedColors = new ()
    {
        Palette = new Palette
        {
            Primary = "#C0FA00"
        }
    };
}